        vk.C = Pairing.G2Point([0x2e6b8407e016137e4ad45aece7cde55c503a3bc8663a4ef7ab33eebc46ad2dd8, 0x228d0e0ea559a8c6ca72a098e0f9b438548f470830886a6c17e13362a39c05d1], [0x2062377b2d163623021ce7fd216d7fa8f2e8e2d02c05b16de6e63a16be709e16, 0x1a5a36432fd0342e5f7f2ba0e3c3e3248020e7388317186d59350b89918da8f6]);
        vk.gamma = Pairing.G2Point([0xe0b55da6e366dfdbf7539f5bec18104191d9d267457a01288a2b1573f40863b, 0x1974e823be10da4a66d67f503330bfae511ae2c6914809e4ef331f9fe8fa20d5], [0x2bc3a48a8cc5c8802b02f7c54fe66ea2427877c59bd9df13971c5e85a3b47006, 0x18fff1bd3a2f2e12f11b7f32bf59b2d9f68cfd81746698f36e1ee978038c97e3]);
